#include <iostream>
using namespace std;
int main(){
    int n;
    cout << "Enter Number:";
    cin >> n;
  for(int i = 1;i <= n;i++){
    for(int k = 0; k <i-1; k++) {
        cout << "  "; 
    }
    
    
    for(int j = i;j<=n;j++){
        cout << "* ";
    }
    
    cout << "\n";  
  }
  return 0;
}


/*    OUTPUT

Enter Number:5
* * * * * 
  * * * * 
    * * * 
      * * 
        * 
        
    */
